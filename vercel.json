{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/build" } }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "https://aramcopakapp-production.up.railway.app/api/$1" },
    { "src": "\\/(.*)", "dest": "/index.html" }
  ]
}
